@{
    Layout = null;
}

@model TbQuanTriVien

<!DOCTYPE html>
<html lang="vi">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập | Trang quản trị THE SPACE COFFEE</title>

    <!--Google Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Layout styles -->
    <link rel="stylesheet" href="~/css/style-admin.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" type="text/css" />
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/favicon.ico" />

    <style>
        .admin__logo {
            font-family: "Montserrat", sans-serif;
            display: inline-block;
            text-transform: uppercase;
            font-size: 15px;
            color: #000;
            font-weight: 500;
            user-select: none;
            text-decoration: none;
        }

        .admin__logo:hover {
            color: #000;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <a class="admin__logo" asp-controller="home" asp-action="index"><i class="fa fa-coffee" aria-hidden="true" title="Thoát khỏi trang quản trị"></i> The Space Coffee</a>
                            </div>
                            <h6>Đăng nhập để tiếp tục</h6>
                            <h6 class="font-weight-light"></h6>

                            @using (Html.BeginForm("Login", "Access", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.TenNguoiDung, new{@class="form-control form-control-lg", type="text", placeholder="Tên đăng nhập", required="required", autofocus="autofocus", autocomplete="off"})
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.MatKhau, new{@class="form-control form-control-lg", type="password", placeholder="Mật khẩu", required="required", autofocus="autofocus"})
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Đăng nhập</button>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--JS Begin-->
    <script>
        function openNavbar() {
            var x = document.getElementById("sidebar");
            if (x.className === "sidebar sidebar-offcanvas") {
                x.className += " active";
            } else {
                x.className = "sidebar sidebar-offcanvas";
            }
        }
    </script>
    <script src="../vendors/js/vendor.bundle.base.js"></script>
    <script src="../js/off-canvas.js"></script>
    <script src="../js/hoverable-collapse.js"></script>
    <script src="../js/misc.js"></script>
    <!--JS End-->
</body>
</html>
